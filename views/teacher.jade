extends layout

head
	block append scripts
		script(type='text/javascript', src='/javascripts/teacher-home.js')

block content
	div#classes
		button#new_class(type='button') New Class
		form#new_class_form(action='teacher/new-class', method='post')
			input(type='text', name='class_name', placeholder='Enter class name')
			input(type='submit', value='Create Class')
			button#hide_class_form(type='button') Hide
		#warning
		//- user is a user object from the db
		h3 #{user.fname} #{user.lname}'s Classes:
		ul#class_list
	div#class_content
		div#class_stats
		ul#student_list
	div#student_info