doctype html
html
	head
		title Storybook Road
		block scripts
			//- JQUERY CDN
			script(src='https://code.jquery.com/jquery-2.2.1.min.js', integrity='sha256-gvQgAFzTH6trSrAWoH1iPo9Xc96QxSZ3feW6kem+O00=', crossorigin="anonymous")
			//- BOOTSTRAP JAVASCRIPT CDN
			script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous")
			//- catch http errors
			script.
				$( document ).ready(function() {
					$( document ).ajaxError(function(event, jqXHR) {
						if (jqXHR.status === 401) {
							document.location.href = "/401";
						}
					});
				});
		//- BOOTSTRAP CSS CDN
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		div.table-wrapper.container
			main.page-row.page-row-expanded
				block content
			footer.page-row
				ul.list-unstyled.list-inline
					li
						a(href='/about') About
					li
						a(href='/contact') Contact Us
					li Version: #{version}